<?xml version="1.0" encoding="UTF-8"?>
<GUI>
	<Page name="SplashScreen" focusedComponentName="splashScreenBackground">
		<ColoredPanel name="splashScreenBackground" color="WHITE" layoutEngine="CoverParentLayoutEngine"
				keyboardEventListener="SplashScreenKeyboardEventListener">
			<TexturedPanel color="WHITE" requestedBounds="-400,-125,400,125" layoutEngine="RelativePositionLayoutEngine"
					horizontalAlignment="CENTER" verticalAlignment="CENTER" texture="plasmidSplash" 
					textureCoordinates="0.0,1.0,1.0,0.0" />
		</ColoredPanel>
	</Page>
	<!-- Page for the menus -->
	<Page name="MainMenuPage" focusedComponentName="mainMenu">
		<TexturedPanel color="WHITE" layoutEngine="CoverParentLayoutEngine" texture="menuPageBackground"
				textureCoordinates="0.0,3.0,3.0,0.0">
			<!-- Main menu -->
			<Menu name="mainMenu" color="#ffffff88" requestedBounds="-200,-200,0,200"
					layoutEngine="RelativePositionLayoutEngine" horizontalAlignment="RIGHT" verticalAlignment="CENTER"
					texture="menuBackground" textureCoordinates="0.0,1.0,1.0,0.0"
					keyboardEventListener="MenuKeyboardEventListener">
				<SelectedItemMarker color="WHITE" layoutEngine="RelativePositionLayoutEngine" requestedBounds="-10,10,-10,10"
						texture="menuSelectedItemBackground" textureCoordinates="0.0,1.0,1.0,0.0"
						horizontalAlignment="CENTER" verticalAlignment="TOP" />
				<TextLabel color="GREEN" requestedBounds="-81,-50,81,14" layoutEngine="RelativePositionLayoutEngine"
						horizontalAlignment="CENTER" verticalAlignment="TOP" value="MAIN MENU" font="fontA"
						textSize="18,36"/>
				<!-- Menu item for "New game" -->
				<MenuItem color="WHITE" requestedBounds="-75,-150,75,-100" layoutEngine="RelativePositionLayoutEngine"
						horizontalAlignment="CENTER" verticalAlignment="TOP" texture="menuItemBackground"
						textureCoordinates="0.0,1.0,1.0,0.0">
					<TextLabel color="GREEN" requestedBounds="-72,-15,72,11" layoutEngine="RelativePositionLayoutEngine"
							horizontalAlignment="CENTER" verticalAlignment="CENTER" value="New Game" font="fontA"
							textSize="18,36"/>
				</MenuItem>
				<!-- Menu item for "Options" -->
				<MenuItem color="WHITE" requestedBounds="-75,-250,75,-200" layoutEngine="RelativePositionLayoutEngine"
						horizontalAlignment="CENTER" verticalAlignment="TOP" texture="menuItemBackground"
						textureCoordinates="0.0,1.0,1.0,0.0" keyboardEventListener="OptionsMenuItemKeyboardEventListener">
					<TextLabel color="GREEN" requestedBounds="-63,-15,63,11" layoutEngine="RelativePositionLayoutEngine"
							horizontalAlignment="CENTER" verticalAlignment="CENTER" value="Options" font="fontA"
							textSize="18,36"/>
				</MenuItem>
				<!-- Menu item for "Exit" -->
				<MenuItem color="WHITE" requestedBounds="-75,-350,75,-300" layoutEngine="RelativePositionLayoutEngine"
						horizontalAlignment="CENTER" verticalAlignment="TOP" texture="menuItemBackground"
						textureCoordinates="0.0,1.0,1.0,0.0" keyboardEventListener="ExitMenuItemKeyboardEventListener">
					<TextLabel color="GREEN" requestedBounds="-36,-15,36,11" layoutEngine="RelativePositionLayoutEngine"
							horizontalAlignment="CENTER" verticalAlignment="CENTER" value="Exit" font="fontA"
							textSize="18,36"/>
				</MenuItem>
			</Menu>
			<!-- Options panel -->
			<Menu name="optionsMenu" color="#ffffff88" requestedBounds="-300,-400,300,400"
					layoutEngine="RelativePositionLayoutEngine" horizontalAlignment="CENTER" verticalAlignment="CENTER"
					texture="menuBackground" textureCoordinates="0.0,1.0,1.0,0.0"
					keyboardEventListener="MenuKeyboardEventListener" hidden="true">
				<SelectedItemMarker color="WHITE" layoutEngine="RelativePositionLayoutEngine" requestedBounds="-10,10,-10,10"
						texture="menuSelectedItemBackground" textureCoordinates="0.0,1.0,1.0,0.0"
						horizontalAlignment="CENTER" verticalAlignment="TOP" />

				<TextLabel  color="GREEN" requestedBounds="-63,-46,63,-11" layoutEngine="RelativePositionLayoutEngine"
							horizontalAlignment="CENTER" verticalAlignment="TOP"
							value="OPTIONS" font="fontA" textSize="18,36"/>

				<TextLabel  color="GREEN" requestedBounds="-90,-96,90,-61" layoutEngine="RelativePositionLayoutEngine"
							horizontalAlignment="CENTER" verticalAlignment="TOP"
							value="Resolution" font="fontA" textSize="18,36"/>

				<TextLabel  color="GREEN" requestedBounds="-90,-196,90,-161" layoutEngine="RelativePositionLayoutEngine"
							horizontalAlignment="CENTER" verticalAlignment="TOP"
							value="Full Screen" font="fontA" textSize="18,36"/>

				<!-- Menu item for "Back" -->
				<MenuItem color="WHITE" requestedBounds="-75,-250,75,-200" layoutEngine="RelativePositionLayoutEngine"
						horizontalAlignment="CENTER" verticalAlignment="TOP" texture="menuItemBackground"
						textureCoordinates="0.0,1.0,1.0,0.0" keyboardEventListener="OptionsMenuBackKeyboardEventListener">
					<TextLabel color="GREEN" requestedBounds="-36,-15,36,11" layoutEngine="RelativePositionLayoutEngine"
							horizontalAlignment="CENTER" verticalAlignment="CENTER" value="Back" font="fontA"
							textSize="18,36"/>
				</MenuItem>
			</Menu>
		</TexturedPanel>
	</Page>
</GUI>
